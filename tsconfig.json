{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "es2019",
    "declaration": false,
    "allowJs": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./@types"
    ],
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "include": [
    "@types/**/*.d.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.{spec,test}.ts"
  ]
}
