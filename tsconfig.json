{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "strict": true,
    "alwaysStrict": true,
    "checkJs": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist",
  },
  "exclude": ["node_modules", "**/*.{spec,test}.ts"]
}
