{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./@types"
    ],
    "outDir": "./out",
    "baseUrl": "src",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "include": [
    "./@types/**/*.d.ts",
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.{spec,test}.ts"
  ]
}